<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="com.themovieviewer.presentation.ui.moviedetails.MovieDetailsFragment" />
        <variable
            name="viewModel"
            type="com.themovieviewer.presentation.ui.moviedetails.MovieDetailsFragmentViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            >
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/startGuideLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/endGuideLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/backdropImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:imageFromUrl="@{viewModel.backdropImage}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:layout_margin="20dp"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:tag="thumbnailPoster"
                app:imageFromUrl="@{viewModel.posterImage}"
                android:onClick="@{fragment::clickOnPoster}"
                tools:src="@drawable/test"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/title"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.title}"
                tools:text="motal aaaa"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@+id/backdropImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/releaseDate"
                android:layout_marginTop="15dp"
                android:paddingEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.releaseDate}"
                tools:text="1999-10-12"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintEnd_toStartOf="@+id/blank"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                tools:text=" / "
                app:layout_constraintHorizontal_chainStyle="packed"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="@+id/releaseDate"
                app:layout_constraintEnd_toEndOf="@+id/runtime"
                app:layout_constraintStart_toEndOf="@+id/releaseDate"/>

            <TextView
                android:id="@+id/runtime"
                android:paddingStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.runtime}"
                tools:text="1h 50m"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="@+id/releaseDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/blank"/>

            <TextView
                android:id="@+id/genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.genres}"
                tools:text="Drama"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/releaseDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/voteAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.voteAverage}"
                tools:text="Drama"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/genres"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tagline"
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.tagline}"
                tools:text="How much can you know about yourself if you've never been in a fight?"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/voteAverage"
                app:layout_constraintEnd_toEndOf="@+id/endGuideLine"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>

            <TextView
                android:id="@+id/tvOverView"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Over View"
                tools:text="Over View"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/tagline"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>

            <TextView
                android:id="@+id/overView"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{viewModel.overview}"
                tools:text="A ticking-time-bomb insomniac and a slippery soap salesman channel primal male aggression into a shocking new form of therapy. Their concept catches on, with underground"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/tvOverView"
                app:layout_constraintEnd_toEndOf="@+id/endGuideLine"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>

            <View
                android:id="@+id/pane"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/overView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/credits"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/action_top_billed_cast"
                tools:text="Top Billed Cast"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="@+id/pane"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/creditsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/credits"
                tools:listitem="@layout/widget_credits_vertical" />

            <TextView
                android:id="@+id/recommendations"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/action_recommendations"
                tools:text="Recommendations"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/creditsRecyclerView"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendationsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recommendations"
                tools:listitem="@layout/widget_movie_recommendations" />

            <TextView
                android:id="@+id/tv_video"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/tv_video"
                tools:text="Video"
                android:textColor="@android:color/black"
                app:visible="@{viewModel.isTrailer}"
                app:layout_constraintTop_toBottomOf="@+id/recommendationsRecyclerView"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/videoRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_video"
                tools:listitem="@layout/widget_video" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="@string/action_status"
                tools:text="Status"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/videoRecyclerView"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>
            <TextView
                android:id="@+id/status"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.status}"
                tools:text="Status"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/tvStatus"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>
            <TextView
                android:id="@+id/tvOriginalLanguage"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/action_original_language"
                tools:text="Original Language"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/status"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>
            <TextView
                android:id="@+id/originalLanguage"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.originalLanguage}"
                tools:text="Original Language"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/tvOriginalLanguage"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>
            <TextView
                android:id="@+id/tvBudget"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/action_budget"
                tools:text="Budget"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/originalLanguage"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>
            <TextView
                android:id="@+id/budget"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.budget}"
                tools:text="Budget"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/tvBudget"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>
            <TextView
                android:id="@+id/tvRevenue"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/action_revenue"
                tools:text="Revenue"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/budget"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>
            <TextView
                android:id="@+id/revenue"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.revenue}"
                tools:text="Revenue"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/tvRevenue"
                app:layout_constraintStart_toStartOf="@+id/startGuideLine"/>

            <ImageView
                android:id="@+id/originalPosterView"
                android:layout_marginTop="30dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:overScrollMode="always"
                android:tag="originalPosterView"
                app:layout_constraintWidth_percent="0.8"
                app:showPoster="@{viewModel.showPoster}"
                app:imageFromUrl="@{viewModel.posterImage}"
                android:onClick="@{fragment::clickOnPoster}"
                android:visibility="invisible"
                android:src="@drawable/test"
                tools:src="@drawable/test"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_save_24"
                android:visibility="invisible"
                app:showPoster="@{viewModel.showPoster}"
                app:layout_constraintTop_toTopOf="@+id/originalPosterView"
                app:layout_constraintStart_toEndOf="@+id/originalPosterView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
